<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD de Clientes</title>
  </head>
  <body>
    <h1>Listagem de CLientes</h1>
    <p>Clientes ja cadastrados</p>
    <table style="width: 50%">
      <thead>
        <tr style="background-color: #ccc">
          <td style="width: 50%">Nome</td>
          <td style="width: 15%">Idade</td>
        </tr>
      </thead>
      <tbody>
        <% if (!results|| results.lenght == 0){%>
        <tr>
          <td>Nenhum cliente cadastrado</td>
        </tr>
        <%} else{ results.forEach(function(cliente) {%>
        <tr>
          <td style="width: 50%"><%= cliente.nome %></td>
          <td style="width: 15%"><%= cliente.idade %></td>
          <td>
            <a href="/edit/<%= cliente.id %>">Editar</a>
            <a
              href="/delete/<%= cliente.id %>"
              onclick="return confirm('Tem certeza?');"
              >Excluir</a
            >
          </td>
        </tr>
        <% })} %>
      </tbody>
      <tfoot>
        <td>
          <a href="/client/new">Cadastrar Novo</a>
        </td>
      </tfoot>
    </table>
  </body>
</html>
